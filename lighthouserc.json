{
  "ci": {
    "collect": {
      "startServerCommand": "npm run dev -- --host --port 5174",
      "url": [
        "http://localhost:5174/Home",
        "http://localhost:5174/Gameplay?gameId=gen-z-fluency",
        "http://localhost:5174/Profile"
      ],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--headless"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.3}],
        "categories:accessibility": ["warn", {"minScore": 0.5}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lighthouseci"
    }
  }
}
